<!DOCTYPE html>
<html>

<head>
  <title>Đăng ký</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <!-- CSS only -->
  <style>
    body {
      height: 100vh;
      background-image: url("/public/images/background.svg");
      background-size: cover;
    }
  </style>
</head>

<body>
  <div class="container-fluid h-100 d-flex flex-column justify-content-center">
    <div class="row h-100 align-items-center">
      <div class="col-sm-12 ">
        <div class="text-center">
          <a href="/">
            <img src="/public/images/conference-k16.svg" class="rounded mx-auto d-block" alt="logo" width="150px">
          </a>
        </div>

        <div class="card shadow-lg mx-auto col-md-4 align-self-md-center" style="border-radius: 40px;">
          <div class="card-body text-center">
            <h1 class="card-title font-weight-bold" style="color: #666666;">Đăng ký</h1>

            <form class="mb-3">
              <div class="form-floating mb-3">
                <input type="text" name="name" class="form-control rounded-pill" id="txtName" placeholder="Họ và tên">
                <label for="txtName">Họ và tên</label>
              </div>
              <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control rounded-pill" id="txtEmail"
                  placeholder="Email ví dụ:name@example.com">
                <label for="txtEmail">Email</label>
              </div>
              <div class="form-floating mb-3">
                <input type="text" name="user_name" class="form-control rounded-pill" id="txtUsername"
                  placeholder="Tên đăng nhập, điện thoại hoặc email ví dụ:name@example.com">
                <label for="txtUsername">Tên đăng nhập</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control rounded-pill" id="txtPassword"
                  placeholder="Mật khẩu">
                <label for="txtPassword">Mật khẩu</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control rounded-pill" id="txtConfirmPassword"
                  placeholder="Nhập lại mật khẩu">
                <label for="txtConfirmPassword">Nhập lại mật khẩu</label>
              </div>

              <button type="button" class="btn btn-success rounded-pill w-100"
                style="height: 55px; background-color: #5AAC44; font-size: larger;" onclick="signUp()">
                Đăng ký tài khoản
              </button>

            </form>

            <div class="d-flex justify-content-between">
              <a class=" " href="/" role="button">
                <i class="fa fa-home" aria-hidden="true"></i>
                Trang chủ
              </a>
              <a class="" href="/login" role="button">
                Đăng nhập
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>

  <script>
    const signUp = _ => {
      console.log('sign up call')
      $(_ => {
        let password = $('#txtPassword').val();
        let passwordConfirm = $('#txtConfirmPassword').val();
        if (password != passwordConfirm) return;

        let data = {
          name: $('#txtName').val(),
          user_name: $('#txtUsername').val(),
          email: $('#txtEmail').val(),
          password
        }

        $.ajax({
          url: 'http://localhost:3000/user',
          method: 'POST',
          dataType: 'json',
          data,
          timeout: 10000
        }).done(data => {
          console.log('data: ', data);
          if (data.status == 1) {
            console.log(data.msg);
            location.href = 'http://localhost:3000/login';
          }
        })
      });
    }
  </script>


</body>

</html>